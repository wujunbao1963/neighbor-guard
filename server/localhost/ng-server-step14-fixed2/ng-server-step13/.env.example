# Copy to .env (do not commit .env)
NODE_ENV=development

# Railway Postgres connection URL
# Example:
# DATABASE_URL=postgresql://USER:PASSWORD@HOST:PORT/DBNAME
DATABASE_URL=

# Railway Postgres typically requires SSL
DB_SSL=true

# Dev workaround for Railway TCP proxy TLS chain issues
# Set to true if you have a proper CA chain; false often fixes local dev
DB_SSL_REJECT_UNAUTHORIZED=false

# Deterministic hash pepper for DeviceKeyAuth lookups.
# For local dev you can keep a short value; for production use a long random secret.
DEVICE_KEY_PEPPER=dev-pepper

# App JWT auth (Step 9)
JWT_SECRET=dev-jwt-secret
JWT_EXPIRES_IN=7d

PORT=3000

# Evidence Vault
EVIDENCE_STORAGE_MODE=mock
EVIDENCE_URL_EXPIRES_SEC=900
# When EVIDENCE_STORAGE_MODE=s3
# EVIDENCE_S3_BUCKET=
# EVIDENCE_S3_REGION=auto
# EVIDENCE_S3_ENDPOINT=
# EVIDENCE_S3_FORCE_PATH_STYLE=false
# EVIDENCE_S3_ACCESS_KEY_ID=
# EVIDENCE_S3_SECRET_ACCESS_KEY=
